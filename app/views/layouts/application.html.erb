    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', async: Rails.env.production? %>
    <%= javascript_include_tag Ckeditor.cdn_url, async: Rails.env.production? %>
    
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-120570521-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-120570521-1');
    </script>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
      (adsbygoogle = window.adsbygoogle || []).push({
        google_ad_client: "ca-pub-3721531347311894",
        enable_page_level_ads: true
      });
    </script>
    <script type='application/ld+json'>{"@context":"http:\/\/schema.org","@type":"WebSite","@id":"#website","url":"https:\/\/www.breathingcomics.com\/","name":"Breathing Comics","potentialAction":{"@type":"SearchAction","target":"https:\/\/www.breathingcomics.com\/?s={search_term_string}","query-input":"required name=search_term_string"}}</script>

    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>

  </head>

  <body>
    <div class="container-fluid">
      <p class="flash"><%= flash.notice %></p>
      <div class="row">
        <div class="col-xs-12 nopadding">
          <%= render partial: 'layouts/main_nav' %>
