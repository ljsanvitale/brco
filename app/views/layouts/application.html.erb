<!DOCTYPE html>
<html>
  <head>
    <title>Breathing Comics</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-120570521-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-120570521-1');
    </script>

    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>

  </head>

  <body>
    <div class="container-fluid">
      <p class="flash"><%= flash.notice %></p>
      <div class="row">
        <div class="col-xs-12 nopadding">
          <%= render partial: 'layouts/main_nav' %>
        </div>
      </div>
      <div class="row">
          <%= yield %>
      </div>
      <div class="row">
        <div class="col-xs-12 footer_small">
          <p>Copyright Â© 2018 Breathing Comics Media. All Rights Reserved</p>
        </div>
      </div>
    </div>

  </body>
</html>
