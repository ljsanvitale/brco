<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <p class="flash"><%= flash.notice %></p>
      <div class="row">
        <div class="col-xs-12">
          <h3>Header</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%= yield %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <h3>Footer</h3>
        </div>
      </div>
    </div>

  </body>
</html>
