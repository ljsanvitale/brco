  <div class="col-xs-12">
    <% if @article.article_type.in?(['review','preview'])then%>
      <div class="row article_review row-eq-height">
          <%if @article.image.exists? %>
            <div class="col-xs-6" style="padding-right:0;">
                <%= image_tag @article.image.url, :class=>'img-responsive mx-5 article_review_img',:alt=>@article.img_alt_text %><br/>
                <% end %>
              </div>
        <div class="col-xs-6  article_review_img_text">
          <p> STORY BY : <%=@article.story_by%></p>
          <p> ART BY: <%=@article.art_by%></p>
          <p> PAGES: <%=@article.number_pages%></p>
          <p> PUBLISHER :<%=@article.publisher%> | <%=@article.published_at.strftime("%B %Y")%></p>
          <p> COVER PRICE  : <%=@article.cover_price%></p>
          <a class="btn btn-info" role="button" href="<%=@article.url%>" target="_blank"> Buy now! </a>
        </div>
      </div>
      <%else%>
      <div class="row">
        <% if @article.image.exists? %>
          <div class="col-xs-12">
            <%= image_tag @article.image.url, :class=>'img-responsive mx-5 main_article_img',:alt=>@article.img_alt_text %><br/>
        </div>
        <% end %>
      </div>
    <% end %>
    <div class="row" style="height:75px;">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- mobile review -->
      <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-3721531347311894" data-ad-slot="9218543965" data-ad-format="auto"></ins>
      <script>(adsbygoogle = window.adsbygoogle || []).push({}); </script>
    </div>

    <div class="row article_content ml-1">
      <div class="col-xs-12">
        <%= (@article.body).html_safe %><br />
        <p> Tags:<% @article.tags.each do |tag| %>
          <%= link_to tag.name, tag_page_path(tag) %>
          <% end %>
        </p>
      </div>
    </div>
    <!--<h3>Comments (<%= @article.comments.size %>)</h3>-->
  </div>
