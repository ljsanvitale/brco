<% @main_articles.each_with_index do |article,index| %>
<% if index <= 7 then
    art_style=ARTICLE_POSITIONS[index] %>
<% else
 art_style=ARTICLE_POSITIONS[6]
end %>
<% if art_style=="col-xs-4" %>
<div class="<%=art_style%> nopadding " id='<%=article.id%>'>
  <div class="row-xs-6 nopadding">
    <%= link_to image_tag("/img2.jpg",:class=>"img-responsive mx-5 main_article_img"), page_path(article) %>
  </div>
  <div class=" nopadding">
    <h1 class="main_article_title">
      <%= link_to article.title, page_path(article) %>
    </h1>
    <p>BY <%= article.author %></p>
  </div>
</div>
<%else%>
<div class="<%=art_style%> nopadding" id='<%=article.id%>'>
  <div class="col-xs-6 nopadding">
<%= link_to image_tag("/img1.jpg",:class=>"img-responsive mx-5 main_article_img"), page_path(article) %>
  </div>
  <div class="col-xs-6 nopadding">
    <h1 class="main_article_title">
      <%= link_to article.title, page_path(article) %>
    </h1>
    <p>BY <%= article.author %></p>
  </div>
</div>
<%end%>

<% end %>
